<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- api.config action window -->
    <record id="action_api_config" model="ir.actions.act_window">
        <field name="name">Konfigurasi API</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">api.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add Text Here
            </p><p>
                More details about what a user can do with this object will be OK 
            
            </p>
        </field>
    </record>

    <!-- api.config form view -->
    <record id="api_config_view_form" model="ir.ui.view">
        <field name="name">Konfigurasi API</field>
        <field name="model">api.config</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="user"/>
                        <field name="base_url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>