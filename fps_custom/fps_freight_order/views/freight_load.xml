<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- freight.load action window -->
    <record id="action_freight_load" model="ir.actions.act_window">
        <field name="name">Freight Load</field>
        <field name="res_model">freight.load</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                    LOAD TYPE / Jenis Barang yang diangkut
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            
            </p>
        </field>
    </record>

    <!-- freight.load form view -->
    <record id="freight_load_view_form" model="ir.ui.view">
        <field name="name">freight.load.view.form</field>
        <field name="model">freight.load</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- freight.load tree view -->
    <record id="freight_load_view_tree" model="ir.ui.view">
        <field name="name">freight.load.view.tree</field>
        <field name="model">freight.load</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>