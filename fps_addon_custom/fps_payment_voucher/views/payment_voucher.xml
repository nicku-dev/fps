<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- FPS payment.voucher action window -->
    <record id="payment_voucher_action" model="ir.actions.act_window">
        <field name="name">Pengajuan Cash Advance</field>
        <field name="res_model">payment.voucher</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- payment.voucher form view -->
    <record id="payment_voucher_view_form" model="ir.ui.view">
        <field name="name">payment.voucher.view.form</field>
        <field name="model">payment.voucher</field>
        <field name="arch" type="xml">
            <form string="Payment Voucher">
        
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Code" />
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>                     
                            <field name="date"/>                     
                            <field name="end_date"/>                     
                            <field name="responsible_id"/>                     
                            <field name="department_id"/>                     
                            <field name="company_id"/>                     
                            <field name="type"/>
                            <field name="journal_entry_id"/>
                            <!-- <field name="selesai_id"/> -->
                            <field name="penyelesaian_id"/>
                            <field name="tgl_penyelesaian"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="payment_voucher_view_tree" model="ir.ui.view">
        <field name="name">payment voucher tree</field>
        <field name="model">payment.voucher</field>
        <field name="arch" type="xml">
            <tree string="Payment Voucher List">
                <field name="name"/>
                <field name="user_id"/>                     
                <field name="department_id"/>                     
                <field name="company_id"/>                     
                <field name="type"/>
            </tree>
        </field>
    </record>        

</odoo>